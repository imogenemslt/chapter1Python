#task4 pg37
sentence= input("please enter a sentence")
print(sentence)
reversesentence=""
for i in sentence:
    reversesentence = i+ reversesentence
print(reversesentence)

#task5 pg38
phrase = input("please enter a sentence ")
character = input("please enter a character ")
charcount = 0
for i in phrase:
    if i ==character:
        charcount +=1
print(charcount)
    
    
              
    

    
